{
  "dockerFile": "Dockerfile",
  "context": "..",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ubuntu/wedding-bot,type=bind",
  "workspaceFolder": "/home/ubuntu/wedding-bot",
  "remoteUser": "ubuntu",
  "runArgs": [
    "--network=host",
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp:unconfined",
    "--security-opt=apparmor:unconfined",
    "--volume=/dev:/dev",
    "--privileged"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "njpwerner.autodocstring",
        "charliermarsh.ruff"
      ]
    }
  }
}
